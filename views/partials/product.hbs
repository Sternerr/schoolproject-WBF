{{#each products}}
<div class="product">
    <div class="product__container">
        <div class="product__text">
            <span><strong>{{ name }}</strong></span>
            <span>{{ price }} kr</span>
        </div>
        <div class="product__button" data-productId="{{id}}">
            <button class="button button--primary button--filled">Add to Cart</button>
        </div>
    </div>

    <img src="{{ image }}" alt="Product">
</div>
{{/each}}


<script src="/assets/js/product.js"></script>